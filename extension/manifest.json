{
  "manifest_version": 3,
  "name": "PhishNet",
  "version": "1.0",
  "description": "Paste or extract an email to detect phishing using machine learning.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["extractor.js"],
      "run_at": "document_idle"
    }
  ]
}
