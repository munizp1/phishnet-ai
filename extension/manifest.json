{
  "manifest_version": 2,
  "name": "PhishNet",
  "version": "1.0",
  "description": "Paste or extract an email to detect phishing using machine learning.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://mail.google.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["extractor.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
